      "pre-commit": "lint-staged"
    }
  },
  "scripts": {
    "dev": "next dev ",
    "build": "next build",
    "start": "next start",
    "build:live": "NODE_ENV=production APP_ENV=live next build",
    "start:live": "NODE_ENV=production APP_ENV=live next start",
